{
  "manifest_version": 3,
  "name": "100 School OS - New Tab",
  "version": "2.2",
  "description": "Minimal new tab \"100 School OS\" with sidebar icons linking to external resources.",
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "100 School OS"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "homepage_url": "https://www.100school.com/privacy-policy"
}
